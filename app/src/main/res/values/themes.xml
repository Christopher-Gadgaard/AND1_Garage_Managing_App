<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AND1_Garage_Managing_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E8F5E9</item>
        <item name="colorPrimaryVariant">#E64A19</item>
        <item name="colorOnPrimary">#1B5E20</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E8F5E9</item>
        <item name="colorSecondaryVariant">#00B8D4</item>
        <item name="colorOnSecondary">#1B5E20</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#C8E6C9</item>

        <item name="android:windowBackground">#C8E6C9</item>
        <item name="android:iconTint">@color/icon_color</item>
        <item name="actionOverflowButtonStyle">@style/IconOverFlow</item>
    </style>

    <style name="Theme.AND1_Garage_Managing_App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="IconOverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/icon_color</item>
    </style>

    <style name="Theme.AND1_Garage_Managing_App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/icon_color</item>
    </style>

    <style name="Theme.AND1_Garage_Managing_App.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:iconTint">@color/icon_color</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#C8E6C9</item>
        <item name="android:textColorPrimary">#595959</item>
        <item name="android:colorAccent">#1b5e20</item>
    </style>

</resources>